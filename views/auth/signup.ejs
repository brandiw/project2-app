<h2>sign up page</h2>

<form action="/auth/signup" method="POST">
	<div class="row">
		<div class="input-field col s6">
			<label for="email">Email</label>
			<input type="email" id="email" name="email" class="validate">
		</div>
		<div class="input-field col s6">
			<label for="password">Password</label>
			<input type="password" id="password" name="password" class="validate">
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6">
			<label for="firstname">First Name</label>
			<input type="text" id="firstname" name="firstname" class="validate">
		</div>
		<div class="input-field col s6">
			<label for="lastname">Last Name</label>
			<input type="text" id="lastname" name="lastname" class="validate">
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6">
			<label for="dob">Date of Birth</label>
			<input type="date" id="dob" name="dob" class="validate" placeholder=" ">
		</div>
		<div class="input-field col s6">
			<label for="image">Image</label>
			<input type="url" id="image" name="image" class="validate">
		</div>
	</div>
	<input type="submit" class="btn btn-primary">
</form>